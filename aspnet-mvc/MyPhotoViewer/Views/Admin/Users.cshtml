@using MyPhotoViewer.Models
@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>
<hr />

<div class="panel panel-primary">
    <div class="panel-heading">
        Registered Photos
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover with-buttons">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Edit", "Edit", "Account", new { userNumber = user.Number }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Delete", "Delete", "Account", new { userNumber = user.Number }, new { @class = "btn btn-primary btn-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

