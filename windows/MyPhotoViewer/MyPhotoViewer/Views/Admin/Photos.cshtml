@using MyPhotoViewer.Core
@model IEnumerable<IPhoto>

@{
    ViewBag.Title = "Photos";
}

@Html.Partial("_TempMessage")

<h2>Photos</h2>
<hr />

<div class="panel panel-primary">
    <div class="panel-heading">
        Registered Photos
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover with-buttons">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Album</th>
                    <th>Creation Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var photo in Model)
                {
                    <tr>
                        <td>@photo.Id</td>
                        <td>@photo.Title</td>
                        <td>@photo.PhotoAlbum.Title</td>
                        <td>@photo.CreationDate</td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Edit", "Edit", "Photo", new { photoId = photo.Id },  new { @class = "btn btn-primary" })
                                @Html.ActionLink("Delete", "Delete", "Photo", new { photoId = photo.Id }, new { @class = "btn btn-primary btn-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

