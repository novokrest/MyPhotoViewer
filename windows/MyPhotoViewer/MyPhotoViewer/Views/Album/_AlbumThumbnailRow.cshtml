@using MyPhotoViewer.ViewModels.Album
@model IReadOnlyList<IAlbumThumbnail>


<div class="row row-grid">
    @if (Model.Count > 0)
    {
        <div class="col-md-4 col-grid">
            @{ Html.RenderPartial("_AlbumThumbnail", Model[0]); }
        </div>
    }

    @if (Model.Count > 1)
    {
        <div class="col-md-4 col-grid">
            @{ Html.RenderPartial("_AlbumThumbnail", Model[1]); }
        </div>
    }

    @if (Model.Count > 2)
    {
        <div class="col-md-4 col-grid">
            @{ Html.RenderPartial("_AlbumThumbnail", Model[2]); }
        </div>
    }
</div>
