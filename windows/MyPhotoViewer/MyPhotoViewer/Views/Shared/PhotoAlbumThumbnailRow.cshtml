@using MyPhotoViewer.ViewModels
@model IReadOnlyList<IPhotoAlbumThumbnail>


<div class="row">
    @if (Model.Count > 0)
    {
        <div class="col-md-4">
            @{ Html.RenderPartial("PhotoAlbumThumbnail", Model[0]); }
        </div>
    }

    @if (Model.Count > 1)
    {
        <div class="col-md-4">
            @{ Html.RenderPartial("PhotoAlbumThumbnail", Model[1]); }
        </div>
    }

    @if (Model.Count > 2)
    {
        <div class="col-md-4">
            @{ Html.RenderPartial("PhotoAlbumThumbnail", Model[2]); }
        </div>
    }
</div>
